<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/selector_row">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ads"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="6sp">
        </View>


        <View
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="6sp">
        </View>
    </LinearLayout>
<LinearLayout
    android:id="@+id/question_paper"
    android:layout_below="@+id/ads"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueLight"
    android:layout_above="@+id/submit_answer"

    >
    <LinearLayout
        android:id="@+id/timerlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6sp"
        android:elevation="6sp"
        android:background="@color/blueForAll">
        <ImageView
            android:id="@+id/clock"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@android:drawable/ic_menu_today" />
        <TextView
            android:id="@+id/t"
            android:paddingTop="6sp"
            android:paddingLeft="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="মোট সময়: "
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/r"
            android:paddingTop="6sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  চলমান সময়:"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/rest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleForModelTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <Button

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:paddingBottom="16sp"
        android:paddingLeft="16sp"
        android:paddingRight="16sp"
        android:paddingTop="16sp"

        android:id="@+id/submit_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F44336"
        android:elevation="20sp"
        android:text="উত্তর সাবমিট করুন"
        android:textColor="@color/white"
        android:textSize="14sp" />
</RelativeLayout>
